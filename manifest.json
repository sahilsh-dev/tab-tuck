{
    "manifest_version": 3,
    "name": "Tab Tuck",
    "description": "Tuck your tabs away and focus on the task at hand.",
    "version": "0.2",
    "background": {
        "service_worker": "service-worker.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "32": "icons/icon32.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "options_ui": {
        "page": "popup.html",
        "open_in_tab": false
    },
    "permissions": ["tabs", "tabGroups", "storage"]
}